<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/postlistlost_errorLayout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6750A3"
        android:fontFamily="@font/jua"
        android:text="분실물 게시판"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="45sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="668dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical"></LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jua"
            android:text="저를"
            android:textAlignment="center"
            android:textSize="40sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jua"
            android:text="찾아주세요"
            android:textAlignment="center"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="143dp">


            <ImageButton
                android:id="@+id/add_postlost"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="60dp"
                android:backgroundTint="#6750A3"
                android:clickable="true"
                android:onClick="onButtonaddClicked_postlost"
                android:src="@drawable/postget"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="#6750A3"
                android:onClick="btn_listlost"
                android:shape="rectangle"
                android:src="@drawable/listview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/jua"
                android:text="분실물 리스트"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button2" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="75dp"
                android:fontFamily="@font/jua"
                android:text="게시글 작성"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/add_postlost" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</LinearLayout>