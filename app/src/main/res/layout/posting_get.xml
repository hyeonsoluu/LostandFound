<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#6750A3"
            android:fontFamily="@font/jua"
            android:text="습득물 게시글"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="45sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:backgroundTint="#FCF8FF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300sp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="120sp"
                        android:layout_height="40sp"
                        android:layout_gravity="center"
                        android:background="#6750A3"
                        android:fontFamily="@font/font1"
                        android:gravity="center"
                        android:letterSpacing="0.1"
                        android:text="아이디"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="DuplicateIds" />

                    <TextView
                        android:id="@+id/et_userID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ems="10"
                        android:fontFamily="@font/font1"
                        android:hint="사용자 아이디"
                        android:inputType="text"
                        android:textAlignment="center"
                        android:textSize="18sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_gallery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="100sp"
                        android:background="@android:color/transparent"
                        android:onClick="onButtongalleryClicked"
                        app:srcCompat="@drawable/gallery" />

                    <ImageButton
                        android:id="@+id/btn_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:onClick="onButtonimgClicked"
                        app:srcCompat="@drawable/camera" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/imageview" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="40sp"
                        android:layout_weight="1"
                        android:background="#6750A3"
                        android:fontFamily="@font/font1"
                        android:gravity="center"
                        android:letterSpacing="0.1"
                        android:text="제목"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="DuplicateIds" />

                    <EditText
                        android:id="@+id/et_title"
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:fontFamily="@font/font1"
                        android:hint="제목을 입력하세요."
                        android:inputType="text"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                    <ImageButton
                        android:id="@+id/voiceBtn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_mic"
                        android:textAlignment="center"
                        android:textColor="#0D47A1"
                        android:textSize="16sp"
                        tools:ignore="SpeakableTextPresentCheck" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:orientation="horizontal"
                    android:layout_marginTop="5sp">

                    <TextView
                        android:id="@+id/tx_imageresult"
                        android:layout_width="120sp"
                        android:layout_height="40sp"
                        android:layout_weight="1"
                        android:background="#6750A3"
                        android:fontFamily="@font/font1"
                        android:gravity="center"
                        android:text="카테고리"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/image_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="12"
                        android:fontFamily="@font/font1"
                        android:inputType="text"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        tools:ignore="SpeakableTextPresentCheck" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:context=".MainActivity">

                    <EditText
                        android:id="@+id/et_Ddate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_weight="1"
                        android:fontFamily="@font/font1"
                        android:hint="달력 버튼을 눌러 날짜를 선택하세요."
                        android:textAlignment="center"
                        android:textSize="18sp" />

                    <ImageButton
                        android:id="@+id/btn_datepicker_get"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/calendar" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100sp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_location_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:fontFamily="@font/font1"
                            android:hint="습득한 위치를 입력하세요."
                            android:inputType="textPostalAddress"
                            android:minHeight="48sp"
                            android:textAlignment="center"
                            android:textSize="18sp" />

                        <ImageButton
                            android:id="@+id/voiceBtn2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_mic"
                            tools:ignore="SpeakableTextPresentCheck" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_location_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:fontFamily="@font/font1"
                            android:hint="상세한 위치를 입력하세요."
                            android:inputType="text"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            tools:ignore="TouchTargetSizeCheck" />

                        <ImageButton
                            android:id="@+id/voiceBtn3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_mic"
                            tools:ignore="SpeakableTextPresentCheck" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="40sp"
                        android:layout_weight="1"
                        android:background="#6750A3"
                        android:fontFamily="@font/font1"
                        android:gravity="center"
                        android:letterSpacing="0.1"
                        android:text="보관장소"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="DuplicateIds" />

                    <EditText
                        android:id="@+id/et_storage"
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:fontFamily="@font/font1"
                        android:hint="보관장소을 입력하세요."
                        android:inputType="text"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                    <ImageButton
                        android:id="@+id/voiceBtn5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_mic"
                        android:textAlignment="center"
                        android:textColor="#0D47A1"
                        android:textSize="16sp"
                        tools:ignore="SpeakableTextPresentCheck" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_content"
                        android:layout_width="wrap_content"
                        android:layout_height="200sp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:fontFamily="@font/font1"
                        android:hint="내용을 입력하세요."
                        android:inputType="textMultiLine"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                    <ImageButton
                        android:id="@+id/voicdBtn4"
                        android:layout_width="50sp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_mic"
                        tools:ignore="SpeakableTextPresentCheck" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_upload_get"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font1"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:onClick="btnOnClickpostUpload"
                    android:text="게시물 업로드"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>