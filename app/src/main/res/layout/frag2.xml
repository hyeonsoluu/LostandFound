<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6750A3"
        android:fontFamily="@font/jua"
        android:text="메인 화면"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="45sp" />


    <ImageButton
        android:id="@+id/btn_currentUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onButtonLocation"
        app:srcCompat="@drawable/baseline_radio_button_unchecked_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="130dp"
            android:layout_height="41dp"
            android:background="#6750A3"
            android:text="사용자 아이디"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/font1"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_userID"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#F8F4FF"
            android:fontFamily="@font/font1"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6750A3"
            android:fontFamily="@font/font1"
            android:text="현재 위치"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_mainLocation"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:background="#F8F4FF"
            android:fontFamily="@font/font1"
            android:textSize="24sp" />


        <Button
            android:id="@+id/btn_Location"
            android:onClick="btn_Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font1"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:text="현재 위치 재설정"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>

